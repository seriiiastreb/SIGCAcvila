<?xml version="1.0"?>

<configuration>
  
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" requirePermission="false"/>
  </configSections>
  
  <log4net>
    <root>
      <level value="ALL"/>
      <appender-ref ref="RollingFile"/>
    </root>
    <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
      <file value="Logs/CurrentLog"/>
      <appendToFile value="true"/>
      <datePattern value="-yyyy-MM"/>
      <rollingStyle value="Date"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%DATE:%date LEVEL:%level LOGGER:%logger MESSAGE:%message%newline"/>
      </layout>
    </appender>
  </log4net>
  
  <appSettings>
    <add key="noSSL" value="false"/>
    <add key="maintenanceMode" value="false"/>
    <add key="TempDirectory" value="Temp"/>
    <add key="SecurityKey" value="SigcAcvilaSeqKey"/>
  </appSettings>

